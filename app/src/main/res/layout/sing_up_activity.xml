<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:windowSoftInputMode="stateAlwaysVisible"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <EditText
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:paddingLeft="75dp"
            android:id="@+id/sing_up_text"
            android:hint=" username        "
            android:layout_marginBottom="20dp"
            android:maxLines = "1"
            android:background="@drawable/inputuser"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:id="@+id/sing_up_password"
            android:paddingLeft="75dp"
            android:hint=" password        "
            android:maxLines = "1"
            android:layout_marginBottom="20dp"
            android:background="@drawable/inputpass"
            />

        <Button
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:onClick="singUpUser"
            android:hint="Sing In"
            android:id="@+id/sing_up_btn"
            android:background="@drawable/button_custom"/>

    </LinearLayout>




</RelativeLayout>